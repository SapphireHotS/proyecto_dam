<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:background="@color/colorPrimaryDark"
    android:padding="5dp"
    android:layout_gravity="center">
    <Button
        android:id="@+id/cerrarPedido"
        android:layout_width="30dp"
        android:text="X"
        android:textColor="@color/blanco"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:background="@drawable/circle_background"
        android:gravity="center"
        android:layout_height="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgPedido"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/nombretv"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@color/colorVerde"
            android:gravity="center"
            android:layout_height="40dp"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <TextView
                android:layout_width="30dp"
                android:layout_height="1dp"/>
            <TextView
                android:gravity="center"
                android:text="Cantidad:"
                android:textSize="30sp"
                android:textColor="@color/colorVerde"
                android:layout_width="150dp"
                android:layout_height="100dp"/>
            <EditText
                android:id="@+id/etCantidad"
                android:layout_width="100dp"
                android:text="1"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_height="45dp"/>


        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btnPedirPedido"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Pedir"
        android:textSize="20sp"
        android:textColor="@color/colorVerde"
        android:background="@drawable/btn_pedir"
        android:layout_gravity="center"></Button>

</LinearLayout>